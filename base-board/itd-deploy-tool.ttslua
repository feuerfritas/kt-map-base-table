function saveTerrain()
  local playZone = getObjectFromGUID('367e50')
  local zoneObj=playZone.getObjects()
  local terrain = {}
  for i, obj in ipairs(zoneObj) do
      local name = obj.getName()
      local guid = obj.getGUID()
      if name ~= 'matObjSurface' and guid ~= '28865a' then
        obj.setLock(true)
        obj.addTag('_'.. killzones[selected_killzone].name .. '_Op' .. tostring(selection))
        
        table.insert(terrain, {
          guid = obj.getGUID(),
          name = obj.getName(),
          --scale = obj.getScale(),
          --position = obj.getPosition(),
          --rotation = obj.getRotation()
        })
        
      end
  end
  print(JSON.encode(terrain))
end

